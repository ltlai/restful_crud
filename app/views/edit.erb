<% if @note %>
  <form action="/<%= @note.id %>" method="post" id="edit">
    <input type="hidden" name="_method" value="put">
    Title: <textarea name="title"><%= @note.title %></textarea>
    Note: <textarea name="content"><%= @note.content %></textarea>
    <input type="submit" value="Edit note">
  </form>
<% else %>
  <p>Note not found.</p>
<% end %>